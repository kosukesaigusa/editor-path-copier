{
  "name": "editor-path-copier",
  "displayName": "Editor Path Copier",
  "description": "Copy file path from editor toolbar button",
  "version": "0.0.1",
  "publisher": "kosukesaigusa",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "editor-path-copier.copyAbsolutePath",
        "title": "Copy Absolute Path",
        "icon": "$(copy)"
      },
      {
        "command": "editor-path-copier.copyRelativePath", 
        "title": "Copy Relative Path",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "editor-path-copier.copyAbsolutePath",
          "when": "resourceScheme == file",
          "group": "navigation"
        },
        {
          "command": "editor-path-copier.copyRelativePath",
          "when": "resourceScheme == file", 
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}